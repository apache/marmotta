            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>com.google.code.tempus-fugit</groupId>
            <artifactId>tempus-fugit</artifactId>
            <scope>test</scope>
        </dependency>


    </dependencies>
    
</project>
